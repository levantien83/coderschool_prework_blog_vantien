<!DOCTYPE html>
<html>
	<head>
	  <title>Valentine's Blog</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container bg-faded">
			<h1>Valentine's blog</h1>
			<button type="button" class="btn btn-primary btn-sm pull-right">Login</button>
			<button type="button" class="btn btn-primary btn-sm pull-right">Logout</button>					
		</div>
		<%= yield %>
		<div class="container">
			<ul class="pager">    			   			
				<li class="pager-next"><a href="#">GitHub</a></li>
				<li class="pager-next"><a href="#">Twitter</a></li>    			
				<li class="pager-next"><a href="#">Facebook</a></li>
				<li class="pager-next"><a href="#">About</a></li>     			
	  		</ul>
		</div>
	</body>
